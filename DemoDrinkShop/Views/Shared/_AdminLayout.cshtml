<!DOCTYPE html>
@{
	bool loginPage = ViewBag.Title == "Log In";
	bool editPage = ((string)ViewBag.Title).StartsWith("Edit");

	string mainDivClass;
	if (loginPage) {
		mainDivClass = "card-shadow login-base";
	}
	else if(editPage)
	{
		mainDivClass = "card-shadow";
	}
	else {
		mainDivClass = "card-shadow form-base";
	}
	//string titleClass = loginPage ? "myformheader" : "";
}
<html>
<head>
	<meta name="viewport" content="width=device-width" />

	<!--link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" /-->
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/css/myfonts.css" />
	<link rel="stylesheet" href="~/css/adminstyles.css"/>
	

	@if (loginPage)
	{
		<link rel="stylesheet" href="~/css/loginstyles.css" />
	}
	<title>@ViewBag.Title</title>


	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

	<script src="~/js/validator-fix.js"></script>
	<script src="~/js/adminImagesAjax.js"></script>

</head>
<body onload="reassignValidation()">
<div class="@mainDivClass">
	<div class="myformheader"><h4>@ViewBag.Title</h4></div>
		<div>
			<a asp-action="Logout" asp-controller="Account">
				@if(editPage) {
					<h4 class="serious-text" style="margin: 0; padding-left: 15px;">Log Out</h4>
				}
				else {
					<h4 class="serious-text">Log Out</h4>
				}	
			</a>
		</div>

	@if (TempData["message"] != null)
	{
		<div class="alert alert-success">@TempData["message"]</div>
	}
	@RenderBody()
</div>
</body>
</html>
